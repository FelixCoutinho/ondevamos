          <span class="label autorizacao" id="nao_autorizado">
          Não autorizado
          </span>
        <% end %>
        <% else %>
        <span class="label success autorizacao" id="autorizado">
        Autorizado
        <%= link_to '', '/grupos/desautorizar/'+membro.id.to_s, :confirm => 'Tem certeza disso?', :method => :delete %>
        </span>
        <% end %>
         -->
        </td>
        </td>
      </tr>
  <% end %>
  <tbody>
</table>

