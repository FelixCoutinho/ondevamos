<h2>Usuários do Grupo <a href="#"><%= @grupo.nome %></a></h2></h2>

<table class="condensed-table zebra-striped">
  <tbody>
  <% @grupo.membros.each do |membro| %>
      <tr>
        <% if membro.autorizado_em.nil? %>
        <td><span class="label important">Não autorizado</td>
        <% else %>
        <td><span class="label success">Autorizado</td>
        <% end %>
        <td><%= membro.usuario.email %></td>
        <td>
        <% if membro.autorizado_em.nil? %>
        <%= link_to 'Autorizar', '/grupos/autorizar/'+membro.id.to_s, :confirm => 'Tem certeza disso?', :method => :get  %>
        <% else %>
        <%= link_to 'Desautorizar', '/grupos/desautorizar/'+membro.id.to_s, :confirm => 'Tem certeza disso?', :method => :delete %>
        <% end %>
        <td>
        <!--
        <% if membro.autorizado_em.nil? %>
