<h2>Grupos</h2>

<table class="bordered-table zebra-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<% @grupos.each do |grupo| %>
  <tbody>
    <tr>
      <td><%= grupo.nome %></td>
      <td><%= link_to 'Restaurantes', grupo_path(grupo) %></td>
      <td><%= link_to 'Editar', edit_grupo_path(grupo) %></td>
      <td><%= link_to 'Remover', grupo, :confirm => 'Tem certeza disso?', :method => :delete %></td>
    </tr>
  <tbody>
<% end %>
</table>

<br />

<%= link_to 'Criar um Grupo', new_grupo_path, :class => 'btn primary' %>
<%= link_to 'Associar-se', new_grupo_path, :class => 'btn' %>
