<!DOCTYPE html>
<html>
<head>
  <title>Ondevamos</title>
  <%= stylesheet_link_tag 'bootstrap.css', 'ondevamos.css' %>
  <%= javascript_include_tag 'jquery.js', 'jquery-ui.min.js', 'jquery_ujs.js', 'application.js', 'autocomplete-rails.js' %>
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>
  <%= csrf_meta_tag %>
  <% if Rails.env.production? %>
  <script type="text/javascript">
    var uvOptions = {};
    (function() {
      var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
      uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/Tn6TviQ7pT69EbNPcxyGw.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
    })();
  </script>
  <script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-27330817-1']);
  _gaq.push(['_trackPageview']);
  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
  </script>
  <% end %>
</head>
<body>
  <div class="topbar">
    <div class="fill">
      <div class="container">
        <a class="brand" href="/">Onde Vamos?</a>
        <ul class="nav">
          <% if usuario_signed_in? %><li><a href="/votos/home">Votação</a></li><% end %>
          <li><a href="/grupos">Grupos</a></li>
          <li><a href="/restaurantes">Restaurantes</a></li>
          <li><a href="/sobre">Sobre</a></li>
          <li><a href="/contato">Contato</a></li>
          <% if !usuario_signed_in? %><li><a href="/usuarios/sign_up">Junte-se a nós!</a></li><% end %>
        </ul>
        <% if usuario_signed_in? %>
          <p class="pull-right"><a href="#"><%= current_usuario.email %></a> <%= link_to('(Sair)', destroy_usuario_session_path, :method => :delete) %></p>
        <% else %>
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "pull-right"}) do |f| %>
            <%= f.email_field :email, :class => 'input-small', :placeholder => 'Email' %>
            <%= f.password_field :password, :class => 'input-small', :placeholder => 'Senha' %>
            <button type="submit" class="btn">Entrar</button>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="hero-unit">
      <% if notice %>
      <div class="alert-message block-message success">
        <p><%= notice %></p>
      </div>
      <% end %>
      <% if alert %>
      <div class="alert-message block-message error">
        <p><%= alert %></p>
      </div>
      <% end %>
      <%= yield %>
    </div>
    <footer>
      <a href="mailto:felix.coutinho@gmail.com"><p>&copy; Felix Coutinho 2011</p></a>
    </footer>
  </div>
</body>
</html>
