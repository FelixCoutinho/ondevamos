<h2>Instruções de desbloqueio</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
<%= devise_error_messages! %>
<fieldset>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
    <%= f.email_field :email %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Reenviar", :class => 'btn primary' %>
  </div>
</fieldset>
<% end %>

<%= render :partial => "usuarios/shared/links" %>
