<%= form_for(@usuario) do |f| %>
<fieldset>
  <% if notice %>
  <div class="alert-message block-message success">
    <p><%= notice %></p>
  </div>
  <% end %>
  <% if @usuario.errors.any? %>
    <div class="alert-message block-message error">
      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :senha %>
    <div class="input">
      <%= f.password_field :senha %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Salvar', :class => 'btn primary' %>
  </div>
</fieldset>
<% end %>
