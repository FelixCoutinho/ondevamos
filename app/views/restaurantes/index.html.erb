<h2>Restaurantes</h2>

<table class="zebra-striped">
<% @restaurantes.each do |restaurante| %>
  <tbody>
    <tr>
      <td><%= restaurante.nome %></td>
      <td>
      <% if restaurante.usuario == current_usuario %>
      <%= link_to 'Editar', edit_restaurante_path(restaurante) %>
      <% end %>
      </td>
      <td>
      <% if restaurante.usuario == current_usuario %>
      <%= link_to 'Remover', restaurante, :confirm => 'Tem certeza disso?', :method => :delete %>
      <% end %>
      </td>
    </tr>
  <tbody>
<% end %>
</table>

<%= link_to 'Novo Restaurante', new_restaurante_path, :class => 'btn primary' %>
