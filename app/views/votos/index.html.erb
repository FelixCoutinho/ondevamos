<h1><%= I18n.l Date.today, :format => "%A, %d de %B de %Y"  %></h1>
<% if notice %>
<div class="alert-message block-message success">
  <p><%= notice %></p>
</div>
<% end %>
<% if @jaVotou %>
<div class="alert-message block-message success">
  <p>Você já votou para 'Onde vamos' no dia de hoje. Obrigado.</p>
</div>
<div id="grafico"></div>
<%= render_chart(@chart, 'grafico') %>
<% else %>
<%= render 'form' %>
<% end %>

